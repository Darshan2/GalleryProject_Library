<?xml version="1.0" encoding="utf-8"?>
<com.darshan.android.fileexplorer.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:id="@+id/folder_RV">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/folderThumb_IV"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#4D000000">

        <TextView
            android:layout_toLeftOf="@id/dirItems_TV"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#ffffff"
            tools:text="WhatsApp"
            android:textSize="14sp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:gravity="start"
            android:layout_alignParentLeft="true"
            android:id="@+id/dirName_TV"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:textColor="#ffffff"
            tools:text="WhatsApp "
            android:textSize="14sp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/dirItems_TV"/>

    </RelativeLayout>

</com.darshan.android.fileexplorer.SquareRelativeLayout>